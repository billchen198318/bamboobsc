<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.1.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.1.xsd">   
    
 	<bean id="shiroCacheManager" class="org.apache.shiro.cache.ehcache.EhCacheManager">
 		<property name="cacheManager" ref="ehcache"/>
 	</bean> 
 	
	<bean id="ldapContextFactory" class="org.apache.shiro.realm.ldap.JndiLdapContextFactory">
    	<property name="url" value="ldap://192.168.0.2:389" />       
    	<property name="systemUsername" value="AD_ADMIN_ACCOUNT" />
    	<property name="systemPassword" value="AD_ADMIN_PASSWORD" />
	</bean>
	
	<!-- 
	class "com.netsteadfast.greenstep.sys.GreenStepBaseAuthorizingActiveDirectoryRealm" no effective "customQueryAttributeValue"
	class "com.netsteadfast.greenstep.sys.GreenStepBaseAuthorizingActiveDirectoryCustomQueryAttributeRealm" will effective "customQueryAttributeValue"
	-->
	<bean id="greenStepBaseAuthorizingActiveDirectoryRealm" class="com.netsteadfast.greenstep.sys.GreenStepBaseAuthorizingActiveDirectoryRealm">
   		<property name="userRoleService" ref="core.service.UserRoleService"/>
   		<property name="rolePermissionService" ref="core.service.RolePermissionService"/>	
		<property name="cacheManager" ref="shiroCacheManager"/>
    	<property name="ldapContextFactory" ref="ldapContextFactory" />
    	
    	<!-- 
    	searchBase value can input many use ";" char to separate, 
    	etc: OU=nsgroup,DC=netsteadfast,DC=com;OU=HR,DC=netsteadfast,DC=com;OU=MIS,DC=netsteadfast,DC=com;OU=FIN,DC=netsteadfast,DC=com
    	only change class "GreenStepBaseAuthorizingActiveDirectoryCustomQueryAttributeRealm" will effective
    	-->
    	<property name="searchBase" value="OU=nsgroup,DC=netsteadfast,DC=com" />   
    	
    	<!-- "customQueryAttributeValue" property, only change class "GreenStepBaseAuthorizingActiveDirectoryCustomQueryAttributeRealm" will effective -->
    	<property name="customQueryAttributeValue" value="sAMAccountName={0}" />
	</bean> 	
	
	<bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
		<property name="realm" ref="greenStepBaseAuthorizingActiveDirectoryRealm"/> 
	</bean>
	
	<!--
	<bean id="passwordService" class="org.apache.shiro.authc.credential.DefaultPasswordService"></bean>	
	-->
	
	<bean id="lifecycleBeanPostProcessor" class="org.apache.shiro.spring.LifecycleBeanPostProcessor"/> 
	
	<bean id="formAuthenticationFilter" class="org.apache.shiro.web.filter.authc.FormAuthenticationFilter"/>    
	
	<!-- For simplest integration, so that all SecurityUtils.* methods work in all cases, -->
	<!-- make the securityManager bean a static singleton.  DO NOT do this in web         -->
	<!-- applications - see the 'Web Applications' section below instead.                 -->
	<bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
	    <property name="staticMethod" value="org.apache.shiro.SecurityUtils.setSecurityManager"/>
	    <property name="arguments" ref="securityManager"/>
	</bean>		
	
	<!-- Enable Shiro Annotations for Spring-configured beans.  Only run after -->
	<!-- the lifecycleBeanProcessor has run: -->
	
	<!-- old -->
	<!-- 
	<bean class="org.springframework.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator" depends-on="lifecycleBeanPostProcessor"/>
	-->
	<!-- new -->
	<!--  
	<aop:aspectj-autoproxy proxy-target-class="true"/>
	-->
	<bean class="org.apache.shiro.spring.security.interceptor.AuthorizationAttributeSourceAdvisor">
	    <property name="securityManager" ref="securityManager"/>
	</bean>	
	
	<bean id="greenStepBaseFormAuthenticationFilter" class="com.netsteadfast.greenstep.sys.GreenStepBaseFormAuthenticationFilter">
		<property name="usernameParam" value="username"/>
		<property name="passwordParam" value="password"/>
		<property name="captchaParam" value="captcha"/>
		<property name="rememberMeParam" value="rememberme"/>
		<!--  
		<property name="accountService" ref="core.service.AccountService"/>
		-->
	</bean>		
	
	<bean id="shiroFilter" class="org.apache.shiro.spring.web.ShiroFilterFactoryBean"> 
		<property name="securityManager" ref="securityManager"/> 
		<property name="loginUrl" value="/login.action"/>
		<property name="successUrl" value="/index.action"/>
		<property name="unauthorizedUrl" value="/pages/system/auth1.jsp"/>
		<property name="filters">
			<util:map>
				<entry key="authc" value-ref="greenStepBaseFormAuthenticationFilter"/>
			</util:map>
		</property>
		<property name="filterChainDefinitions">
			<value> 
         		/=anon 
         		
         		/login.action*=authc
         		/logout.action*=anon 
         		/index.action*=authc
         		/core.generateMenu.action*=anon
         		/core.generateMenuJs.action*=anon
				/core.printContentAction.action*=anon
				/bsc.printContentAction.action*=anon
				/qcharts.printContentAction.action*=anon         		
				/core.commonMeterChartAction.action*=anon
				/bsc.commonMeterChartAction.action*=anon
				/charts.commonMeterChartAction.action*=anon
				/bsc.mobile.commonMeterChartAction.action*=anon
				/core.commonBarChartAction.action*=anon
				/bsc.commonBarChartAction.action*=anon
				/charts.commonBarChartAction.action*=anon
				/core.commonPieChartAction.action*=anon
				/bsc.commonPieChartAction.action*=anon
				/charts.commonPieChartAction.action*=anon				
         		/*.action=authc
         		
         		/publish/**=anon		
         		
         		/kaptcha.jpg=anon 
         		/services/**=anon         
         		/images/**=anon
         		/css/**=anon
         		/js/**=anon
         		/camel/**=anon         
         		/hessian/**=anon
         		
			</value> 
   		</property> 
	</bean>
		    
</beans>    
