<table width="450px" border="0" cellspacing="2" cellpadding="0" bgcolor="#2E2E2E">
	<tr valign="top">
		<td width="100%" align="center" bgcolor="#2E2E2E">
		<font color="#F2F2F2" size="3"><b>${vision.title}</b></font>
		</td>
	</tr>	
	<tr valign="top">
		<td width="100%" align="center" bgcolor="#2E2E2E">
		<font color="#F2F2F2" size="2"><b>Perspectives: ${perspectiveSize}</b></font>
		</td>
	</tr>	
	<tr valign="top">
		<td width="100%" align="center" bgcolor="#2E2E2E">
		<font color="#F2F2F2" size="2"><b>Objectives: ${objectiveSize}</b></font>
		</td>
	</tr>	
	<tr valign="top">
		<td width="100%" align="center" bgcolor="#2E2E2E">
		<font color="#F2F2F2" size="2"><b>KPIs: ${kpiSize}</b></font>
		</td>
	</tr>
	<tr>
		<td width="100%" align="right" bgcolor="${vision.bgColor}">
			<font color="${vision.fontColor}" size="4"><b>Score: ${vision.score}</b></font>
			<BR/>
			<hr width="100%" size="15" color="${vision.fontColor}">
		</td>
	</tr>
	<tr valign="top">
		<td width="100%" bgcolor="#ffffff">
		${vision.content}
		</td>
	</tr>
</table>
